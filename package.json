{
  "name": "app-matriculas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/services/electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron ."
  },
  "dependencies": {
    "@react-pdf/renderer": "^3.1.14",
    "firebase": "^10.4.0",
    "framer-motion": "^10.16.16",
    "moment": "^2.30.1",
    "notistack": "^3.0.1",
    "react": "^18.2.0",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "electron": "^26.3.0",
    "standard": "^17.1.0",
    "vite": "^4.4.5"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json"
  },
  "build": {
    "appId": "com.nobel.applitactivoMatriculas",
    "win": {
      "target": "nsis",
      "icon": "./dist/icon/icon.ico"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "./src/services/electron/main.cjs",
      "package.json"
    ],
    "nsis": {
      "uninstallDisplayName": "Unistall this app",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "directory": "C:\\Program Files\\Aplicacion Academia Nobel",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "productName": "Aplicacion Academia Nobel",
    "directories": {
      "output": "releases",
      "buildResources": "dist"
    }
  }
